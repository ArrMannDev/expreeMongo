<h1>Home Page</h1>
<h3>All Posts</h3>
<div class="row g-3 m-0 p-5">
  <% posts.forEach(post=> { %>
  <div class="col-md-4 col-lg-3 rounded shadow p-4">
    <h4><%= post.title %></h4>
    <p><%= post.content %></p>
  </div>
  <% }) %>
</div>
<div class="text-center mb-5">
  <% if (page> 1) { %>
  <a
    href="/?page=<%= page - 1 %>&perPage=<%= perPage %>"
    class="btn btn-primary"
    >Previous</a
  >
  <% } %> Page: <%= page %> <% if (page * perPage < totalPosts) { %>
  <a
    href="/?page=<%= page + 1 %>&perPage=<%= perPage %>"
    class="btn btn-primary"
    >Next</a
  >
  <% } %>
</div>
